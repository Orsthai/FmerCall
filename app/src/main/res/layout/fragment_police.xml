<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Red Layout-->
    <LinearLayout
        android:background="#82ffffff"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!--Blue Layout-->
       <LinearLayout
           android:orientation="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <!--Green Layout-->
           <RelativeLayout
               android:layout_margin="@dimen/margin"
               android:layout_width="@dimen/icon"
               android:layout_height="@dimen/icon">

               <!--Station1-->
               <ImageView
                   android:id="@+id/imageViewstation1"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:src="@drawable/station1" />

               <!--Title-->
               <TextView
                   android:clickable="true"
                   android:id="@+id/textViewStation1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:background="#82000000"
                   android:gravity="center_horizontal"
                   android:padding="5dp"
                   android:text="@string/station1"
                   android:textColor="#ffffff"
                   android:textSize="18sp"
                   android:textStyle="bold" />


           </RelativeLayout>

           <!--Green Layout-->
           <RelativeLayout
               android:layout_margin="@dimen/margin"
               android:layout_width="@dimen/icon"
               android:layout_height="@dimen/icon">

               <!--Station2-->
               <ImageView
                   android:src="@drawable/station2"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />

               <!--Title-->
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_alignParentBottom="true"
                   android:background="#82000000"
                   android:gravity="center_horizontal"
                   android:padding="5dp"
                   android:text="@string/station2"
                   android:textColor="#ffffff"
                   android:textSize="18sp"
                   android:textStyle="bold" />




           </RelativeLayout>






       </LinearLayout>

        <!--Blue Layout-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--Green layout-->
            <RelativeLayout
                android:layout_margin="@dimen/margin"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon">

                <!--Station3-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/station3" />

                <!--Title-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#82000000"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/station3"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />



            </RelativeLayout>

            <!--Green layout-->
            <RelativeLayout
                android:layout_margin="@dimen/margin"
                android:layout_width="@dimen/icon"
                android:layout_height="@dimen/icon">

                <!--Station4-->
                <ImageView
                    android:src="@drawable/station4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <!--Title-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#82000000"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/station4"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />



            </RelativeLayout>






        </LinearLayout>


    </LinearLayout>



</RelativeLayout>